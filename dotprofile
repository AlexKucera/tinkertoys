## Deadline
export PATH=$MAYA_LOCATION/bin:$PATH:/Applications/Deadline/Resources/bin:$TANK_PATH

## Node.js
export NODE_PATH="/usr/local/lib/node_modules"

## Various
export EDITOR="/usr/local/bin/mate"

## Homebrew
export HOMEBREW_CASK_OPTS="--appdir=/Applications --caskroom=/usr/local/Caskroom"

## Python
export PATH=/usr/local/lib/python2.7/site-packages:$PATH
export PYTHONPATH=/usr/local/lib/python2.7/site-packages:/Library/Frameworks/Python.framework/Versions/2.7/bin:$X_PIPELINE_LOCATION/x_AppPlugins/Maya/pymel-1.0.3:$X_PIPELINE_LOCATION/x_AppPlugins/modo/script_dev/modo_python_api:$(find /Volumes/ProjectsRaid/x_Pipeline/Scripting -name '.*' -prune -o -type d | tr '\n' ':')
export PYTHONPATH
if which pyenv > /dev/null; then eval "$(pyenv init -)"; fi
export PYENV_ROOT=/usr/local/opt/pyenv